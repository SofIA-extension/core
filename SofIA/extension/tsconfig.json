{
  "extends": "./node_modules/plasmo/templates/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["chrome", "react"],
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": [
    ".plasmo/index.d.ts",
    "../types.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
