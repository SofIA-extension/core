{
  "extends": "./node_modules/plasmo/templates/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "types": [
      "chrome",
      "react"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ]
  },
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "../types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}