{
  "manifest_version": 3,
  "name": "SOFIA Extension",
  "version": "1.0.0",
  "description": "Extension Chrome pour connexion wallet et suivi historique de navigation avec int√©gration Eliza OS",
  "icons": {
    "16": "icons/icon-black.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "SOFIA Extension",
    "default_icon": {
      "16": "icons/icon-black.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_page": "src/options/index.html",
  "permissions": [
    "storage",
    "history",
    "tabs",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "src/popup/*", "src/options/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://localhost/*", "*://127.0.0.1/*"]
  }
} 